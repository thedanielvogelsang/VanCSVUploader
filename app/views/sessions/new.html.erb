<div class="">

<h2>Log in</h2>

<%= form_for(:session, url: login_path) do |f| %>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign In!" %>
  </div>
<% end %>


</div>
